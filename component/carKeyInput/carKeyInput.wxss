.carNumber_box{
  display: flex;
  color: #999999;
  justify-content: space-around;
  padding:0 60rpx;
}
.box_input_flex{
  display: flex;
}
.first_box{
  margin-right:20rpx;
}
.box_input {
  border: 1rpx solid #BFBFBF;
  width: 80rpx;
  height: 80rpx;
  margin: 2rpx;
}
.box_input-box {
  display: flex;
  justify-content: center;
  padding: 20rpx;
}

.inputing {
  opacity: 1;
  animation: opa .6s alternate linear infinite;
  font-size: 50rpx;
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #1E90FF;
}
.box_input {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.carNumber_swiper{
  height: 150rpx;
}
.comCarNumber{
  width: 400rpx;
  height: 120rpx;
  border-radius: 15rpx;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.YelloCarNuber{
  background: #ffce08;
}
.BlueCarNuber{
  background: #2d71dc;
}
.newCarNuber{
